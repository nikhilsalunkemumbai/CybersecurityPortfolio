  <ItemGroup>
    <PackageReference Include="System.DirectoryServices" Version="8.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="ActiveDirectoryUserReport.Tests\**\*.cs" />
  </ItemGroup>

</Project>
